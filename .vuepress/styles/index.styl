#vuperess-theme-blog__global-layout > .footer {
  display: none;
}

.vuepress-toc {
  right: initial;
  left: 0
}

.vuepress-toc {
  .vuepress-toc-item {
    border: 0;

    a {
      transition: none !important;
      font-size: 14px !important;
    }

    &.active {
      background-color: $accentColor;

      a {
        color: white !important;
      }
    }
  }
}
